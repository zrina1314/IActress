<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/Color_C"
              android:orientation="vertical"
              tools:context=".ui.activity.MainActivity">

    <include layout="@layout/public_head_title"/>

    <View style="@style/publicLine"/>

    <RadioGroup
        android:id="@+id/rg_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbtn_picture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/coupon_title_left_selector"
            android:button="@null"
            android:textColor="@drawable/text_red_white_selector"
            android:gravity="center"
            android:text="@string/picture"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rbtn_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/coupon_title_right_selector"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/text_red_white_selector"
            android:text="@string/video"
            />
    </RadioGroup>


    <FrameLayout
        android:id="@+id/id_content"
        android:layout_width="match_parent"
        android:background="@color/Color_C"
        android:padding="@dimen/x5"
        android:layout_height="match_parent"/>
</LinearLayout>
